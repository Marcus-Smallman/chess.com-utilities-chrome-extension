{
  "manifest_version": 3,
  "name": "Chess.com utilities",
  "description": "Extra Chess.com utilities",
  "version": "1.0",
  "icons": {
    "128": "./images/icon.png"
  },
  "permissions": [
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://www.chess.com/"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": "./images/pawn.png"
  },
  "background": {
    "service_worker": "./scripts/background.js"
  }
}